<%= form_with model: @recipe, local: true do |f|%>
  <div class="field">
    <%= f.label :title, "レシピ名" %><br />
    <%= f.text_field :title, id:"recipe_title" %>
  </div>

  <div class="field">
    <%= f.label :description, "作り方" %><br />
    <%= f.text_area :description, class: :form__text, id:"recipe_description" %>
  </div>

  <div class="field">
    <%= f.label :image, "レシピの画像" %><br />
    <%= f.file_field :image, id:"recipe_image" %>
  </div>

  <div class="actions">
    <%= f.submit "保存する", class: :form__btn  %>
  </div>
<% end %>