<div class="card">
  <%= link_to image_tag(recipe.image, class: :card__img ), root_path%>
  <div class="card__body">
    <%= link_to recipe.title, root_path, class: :card__title%>
    <p class="card__summary">
      <%= recipe.description %>
    </p>
    <%= link_to "by #{recipe.user.name}", root_path, class: :card__user %>
  </div>
</div>