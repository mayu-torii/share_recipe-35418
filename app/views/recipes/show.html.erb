<main class="main">
  <div class="inner">
    <div class="prototype__wrapper">
      <p class="prototype__hedding">
        <%= @recipe.title %>
      </p>
      <%= link_to "by #{@recipe.user.name}", root_path, class: :prototype__user %>
      <% if current_user == @recipe.user%>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_recipe_path(@recipe), class: :prototype__btn %>
          <%= link_to "削除する", recipe_path(@recipe), method: :delete, class: :prototype__btn %>
        </div>
      <% end %>   
      <%# // プロトタイプの投稿者とログインしているユーザーが同じであれば上記を表示する %>
      <div class="prototype__image">
        <%= image_tag @recipe.image %>
      </div>
        <div class="prototype__detail">
          <p class="detail__title">作り方</p>
          <p class="detail__message">
            <%= @recipe.description %>
          </p>
        </div>
      </div>
      <div class="prototype__comments">
        <% if user_signed_in? %>
          <%= form_with model: @recipe,local: true do |f|%>
            <div class="field">
              <%= f.label :text, "コメント" %><br />
              <%= f.text_field :text, id:"comment_text" %>
            </div>
            <div class="actions">
              <%= f.submit "送信する", class: :form__btn  %>
            </div>
          <% end %> 
        <% end %>
        <ul class="comments_lists">
          <% @comments.each do |comment| %>
            <li class="comments_list">
              <%= comment.text%>
              <%= link_to "（#{comment.user.name}）", user_path(comment.user), class: :comment_user %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</main>
